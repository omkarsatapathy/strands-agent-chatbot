# LlamaCpp Server Configuration
LLAMA_CPP_URL=http://127.0.0.1:8033

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Google Maps JavaScript API (for frontend maps widget)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# FastAPI Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_ID=gemini-2.0-flash

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_ID=gpt-5-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# OpenAI TTS Configuration
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=marin
OPENAI_TTS_SPEED=1.0

# Gmail Configuration
GMAIL_USER_ID=default
GMAIL_DEFAULT_MAX_RESULTS=15
GMAIL_MAX_RESULTS_LIMIT=50
GMAIL_BODY_MAX_LENGTH=5000
GMAIL_CREDENTIALS_DIR=frontend/database/gmail_credentials

# Agent Limits
MAX_TOOL_CALLS=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_TO_CONSOLE=True
